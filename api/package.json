{
  "name": "api",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "kysely:codegen":"kysely-codegen --out-file generated/kysely/db.d.ts",
    "atlas:schema:inspect": "atlas schema inspect -u \"mysql://root:root_password@db:3306/hono_db\" > generated/atlas/schema.hcl",
    "atlas:schema:apply": "atlas schema apply -u \"mysql://root:root_password@db:3306/hono_db\" --to file://generated/atlas/schema.hcl",
    "atlas:migrate:diff": "atlas migrate diff \"$@\" --dir \"file://generated/atlas/migrations\" --to \"file://generated/atlas/schema.hcl\" --dev-url \"mysql://root:root_password@db:3306/atlas_dev\""
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.6",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "hono": "^4.11.1",
    "kysely": "^0.28.9",
    "mysql2": "^3.16.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "kysely-codegen": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  }
}
